<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.jc.system.security.domain.RoleExts"><select id="query" parameterType="com.jc.system.security.domain.RoleExts" resultType="com.jc.system.security.domain.RoleExts">
		SELECT 	
		ROLE_ID as roleId, 
		PERMISSION_TYPE as permissionType,
		WEIGHT_RULE as weightRule,
		WEIGHT as weight
		FROM toa_sys_role_ext where 1 = 1
			<if test="roleId != null">
				and ROLE_ID = #{roleId}
			</if>
			<if test="primaryKeys != null">
				and ROLE_ID in 
				<foreach collection="primaryKeys" item="primaryKey" index="index" open="(" close=")" separator=",">
		            #{primaryKey}
	        	</foreach>
	        </if>
	</select>
	
	
	<insert id="insert" parameterType="com.jc.system.security.domain.RoleExts">
	<selectKey resultType="long" keyProperty="id" order="BEFORE">SELECT toa_sys_role_ext_ID_SEQ.NEXTVAL FROM DUAL</selectKey>
	INSERT INTO toa_sys_role_ext 
		(ID,ROLE_ID,PERMISSION_TYPE,WEIGHT,WEIGHT_RULE)
		VALUES
	    	(#{id},#{roleId,jdbcType=NUMERIC},#{permissionType,jdbcType=NUMERIC},#{weight,jdbcType=NUMERIC},#{weightRule,jdbcType=NUMERIC})
	</insert>
	
	<insert id="insertList" parameterType="com.jc.system.security.domain.RoleExts">
	INSERT INTO toa_sys_role_ext 
		(ROLE_ID,PERMISSION_TYPE,WEIGHT,WEIGHT_RULE)
		VALUES
		<foreach collection="list" item="item" index="index" separator=",">
	    	(#{item.roleId,jdbcType=NUMERIC,#{item.permissionType,jdbcType=NUMERIC},#{item.weight,jdbcType=NUMERIC},#{item.weightRule,jdbcType=NUMERIC})
	    </foreach>
	</insert><update id="deleteLogic" parameterType="com.jc.system.security.domain.RoleExts">
		<![CDATA[
    		UPDATE toa_sys_role_ext set 
    	]]>
      	<where>			
			<if test="roleId != null">
				 ROLE_ID = #{roleId}
			</if>
		</where>
 	</update><delete id="deletePhysical" parameterType="com.jc.system.security.domain.RoleExts">
    	delete from toa_sys_role_ext
      		where ROLE_ID in
      		<foreach collection="primaryKeys" item="primaryKey" index="index" open="(" close=")" separator=",">
	            #{primaryKey}
	        </foreach>
 	</delete></mapper>