<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jc.system.security.domain.RoleMenus">

	<select id="query" parameterType="com.jc.system.security.domain.RoleMenus" resultType="com.jc.system.security.domain.RoleMenus">
		SELECT 	
		ROLE_ID as roleId, 
		MENU_ID as menuId, 
		DELETE_FLAG as deleteFlag
		FROM toa_sys_role_menu 
		<where>
			<if test="roleId != null">
				ROLE_ID = #{roleId}
			</if>
			<if test="menuId != null">
				MENU_ID = #{menuId}
			</if>
		</where>
	</select>
	
	<insert id="insertList" parameterType="com.jc.system.security.domain.RoleMenus">
	INSERT INTO toa_sys_role_menu 
		(ROLE_ID, MENU_ID,CREATE_USER,CREATE_DATE,CREATE_USER_DEPT,MODIFY_USER,MODIFY_DATE,DELETE_FLAG)
		VALUES
		<foreach collection="list" item="item" index="index" separator="," >
	    	(#{item.roleId,jdbcType=NUMERIC},#{item.menuId,jdbcType=NUMERIC},#{item.createUser,jdbcType=NUMERIC},#{item.createDate,jdbcType=TIMESTAMP},#{item.createUserDept,jdbcType=NUMERIC},#{item.modifyUser,jdbcType=NUMERIC},#{item.modifyDate,jdbcType=TIMESTAMP},0)
	    </foreach>
	</insert>
	
	<update id="deleteByIds" parameterType="com.jc.system.security.domain.RoleMenus">
    	UPDATE t_role_menus SET DELETE_FLAG = 1 where ROLE_ID = #{roleId}
 	</update>
 	
 	<update id="deleteLogic"  parameterType="com.jc.system.security.domain.RoleMenus">
		<![CDATA[
    		UPDATE toa_sys_role_menu set DELETE_FLAG = 1, MODIFY_USER = #{modifyUser}, MODIFY_DATE = #{modifyDate}
    	]]>
      	<where>			
			<if test="roleId != null">
				 ROLE_ID = #{roleId}
			</if>
		</where>
 	</update>
	<delete id="deletePhysical"  parameterType="com.jc.system.security.domain.RoleMenus">
    	delete from toa_sys_role_menu
      		where ROLE_ID in
      		<foreach collection="primaryKeys" item="primaryKey" index="index"
	            open="(" close=")" separator=",">
	            #{primaryKey}
	        </foreach>
 	</delete>
</mapper>